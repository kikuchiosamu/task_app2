<h3>スケジュール一覧</h3>

<% if flash[:notice] %>
  <p calss="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.id %></td>
        <td><%= plan.title %></td>
        <td><%= plan.start %></td>
        <td><%= plan.end %></td>
        <td><% if plan.allday == true %>
              ○
            <% else plan.allday == false %>

            <% end %>
          </td>
        <td><%= plan.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "確認", plan %></td>
        <td><%= link_to "編集", [:edit, plan] %></td>
        <td><%= link_to "削除", plan, method: :delete, data: { confirm: "本当に削除しますか？"} %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

<p><%= link_to "スケジュール新規登録", new_plan_path %></p>

<% content_for :sum do %>
  スケジュール合計:<%= @plan_count %>
<% end %>